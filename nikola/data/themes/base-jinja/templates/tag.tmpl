{#  -*- coding: utf-8 -*- #}
{% extends 'list_post.tmpl' %}
{% import 'translation_link_helper.tmpl' as translation_links with context %}

{% block extra_head %}
    {{ super() }}
    {{ translation_links.head(tag) }}
{% endblock %}


{% block content %}
<article class="tagpage">
    <header>
        <h1>{{ title|e }}</h1>
        {% if description %}
            <p>{{ description }}</p>
        {% endif %}
        {% if subcategories %}
        {{ messages('Subcategories:') }}
        <ul>
            {% for name, link in subcategories %}
            <li><a href="{{ link }}">{{ name|e }}</a></li>
            {% endfor %}
        </ul>
        {% endif %}
        <div class="metadata">
            {{ translation_links.feed_link(tag) }}
        </div>
        {{ translation_links.translation_link() }}
    </header>
    {% if posts %}
        <ul class="postlist">
        {% for post in posts %}
            <li><time class="listdate" datetime="{{ post.formatted_date('webiso') }}" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date(date_format)|e }}</time> <a href="{{ post.permalink() }}" class="listtitle">{{ post.title()|e }}<a></li>
        {% endfor %}
        </ul>
    {% endif %}
</article>
{% endblock %}
